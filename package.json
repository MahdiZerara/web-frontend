{
  "name": "reactjs-app",
  "version": "1.0.0",
  "description": "This is a tutorial on how to create a ReactJS application from the ground up using Webpack and Docker",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.23.2",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@jest/globals": "29.7.0",
    "@types/jest": "29.5.11",
    "@typescript-eslint/parser": "6.8.0",
    "babel-loader": "9.1.3",
    "babel-plugin-jsx-remove-data-test-id": "3.0.0",
    "clean-webpack-plugin": "4.0.0",
    "compression-webpack-plugin": "10.0.0",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "css-loader": "6.8.1",
    "css-minimizer-webpack-plugin": "5.0.1",
    "cypress": "13.6.1",
    "eslint": "8.51.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-webpack-plugin": "4.0.1",
    "html-webpack-plugin": "5.5.3",
    "http-server": "14.1.1",
    "jest": "29.7.0",
    "mini-css-extract-plugin": "2.7.6",
    "path": "0.12.7",
    "postcss-import": "15.1.0",
    "postcss-loader": "7.3.3",
    "postcss-preset-env": "9.3.0",
    "progress-bar-webpack-plugin": "2.1.0",
    "sass": "1.69.5",
    "sass-loader": "13.3.2",
    "sitemap-webpack-plugin": "1.1.1",
    "style-loader": "3.3.3",
    "stylelint-config-standard-scss": "11.1.0",
    "stylelint-scss": "5.3.1",
    "stylelint-webpack-plugin": "4.1.1",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1",
    "webpack-merge": "5.10.0",
    "zip-webpack-plugin": "4.0.1"
  },
  "scripts": {
    "dev:build": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack --config webpack.development.config.ts",
    "dev:serve": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack serve --config webpack.development.config.ts",
    "staging:build": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack --config webpack.staging.config.ts",
    "staging:serve": "npm run staging:build & http-server -o -p 8080 -c-1 -S -C ./configs/certificate/cert.pem -K ./configs/certificate/key.pem ./dist -b",
    "prod:build": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack --config webpack.production.config.ts",
    "prod:serve": "npm run prod:build & http-server -o -p 8080 -c-1 -S -C ./configs/certificate/cert.pem -K ./configs/certificate/key.pem ./dist -b",
    "test:unit": "jest",
    "test:unit-lint": "eslint ./src/**/*.spec.ts",
    "test:unit-watch": "jest --watchAll",
    "test:e2e": "cypress run --config-file tests/e2e/cypress.config.js",
    "test:e2e-lint": "eslint ./tests/**/*.cy.ts"
  }
}